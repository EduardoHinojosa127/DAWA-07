<!DOCTYPE html>
<html>
  <head>
    <title>Lista de artistas</title>
    <link rel="stylesheet" type="text/css" href="/css/artistas.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
  </head>
  <body>
    <div class="text-center mt-5">
      <a href="/" class="btn btn-primary">Volver a inicio</a>
    </div>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Lista de artistas</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
          </tr>
        </thead>
        <tbody>
          <% artistas.forEach((artista) => { %>
            <tr>
              <td><%= artista.nombre %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="text-center">
        <a href="/agregar-artista" class="btn btn-primary">Agregar Artista</a>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
